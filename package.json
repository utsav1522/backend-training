{
  "name": "backend-training",
  "version": "1.0.0",
  "description": "The following repository is for the backend training.",
  "main": "app.js",
  "scripts": {
    "remove-dist": "rimraf dist",
    "copy-resources": "cp -Rf ./package.json ./dist",
    "prebuild": "npm run remove-dist",
    "build": "tsc",
    "postbuild": "npm run copy-resources",
    "prestart": "npm run build",
    "start": "concurrently \"npm run build:watch\" \"nodemon dist/app.js\"",
    "build:watch": "tsc -w",
    "packaging": "npm run build && pkg ./dist/",
    "start-ts": "nodemon dist/app.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^8.4.1",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.4",
    "@types/mongoose": "^5.11.97",
    "concurrently": "^7.2.0",
    "nodemon": "^3.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^5.4.5"
  }
}
